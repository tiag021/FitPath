<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startBtn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/playbtn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/stopBtn"
        android:visibility="invisible"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/stopbtn"/>
    <ImageView
        android:id="@+id/whiteCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/whitecircle"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/currentLocBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="42sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        android:background="@drawable/roundbtn"/>
    <ImageView
        android:id="@+id/currentLocImg"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:elevation="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/location"
        android:layout_alignParentRight="true"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="46sp" />
    <TextView
        android:id="@+id/timer"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20sp"
        android:paddingTop="5sp"
        android:layout_alignParentBottom="true"
        android:text="00:00:00"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/kms"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:text="0m"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="30dp" />

</RelativeLayout>
